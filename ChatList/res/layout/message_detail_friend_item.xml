<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout android:orientation="vertical"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="wrap_content">

	<TextView  android:textColor="@color/lightgrey"
		android:layout_gravity="center_horizontal" android:id="@+id/sms_time"
		android:text="2011-03-09 13:22" android:layout_width="wrap_content"
		android:layout_height="wrap_content" />
	<LinearLayout android:orientation="horizontal"
		android:id="@+id/message_detail_friend_item" android:paddingLeft="4.0dip"
		android:paddingTop="4.0dip" android:paddingRight="4.0dip"
		android:paddingBottom="4.0dip" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:layout_marginTop="2.0dip"
		android:layout_marginBottom="2.0dip">
		<LinearLayout android:gravity="center"
			android:id="@+id/message_detail_item_avatar_layout"
			android:layout_marginRight="5dp"
			android:background="@drawable/news_headborder" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_gravity="bottom">
			<ImageView android:id="@+id/message_detail_item_avatar"
				android:layout_width="33.0dip" android:layout_height="33.0dip"
				android:src="@drawable/head_icon" />
		</LinearLayout>
		<TextView android:textStyle="bold" android:textColor="@drawable/black"
			android:maxWidth="200.0dip" android:background="@drawable/chatfrom_bg_normal"
			android:id="@+id/message_detail_item_attachment_des"
			android:text="text"
			android:layout_width="wrap_content" android:layout_height="wrap_content" />
		<ImageView android:src="@drawable/sms_read"
			android:paddingLeft="10.0dip" android:layout_gravity="center_vertical"
			android:layout_width="wrap_content" android:layout_height="wrap_content"></ImageView>
	</LinearLayout>
</LinearLayout>