<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
   <LinearLayout 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:background="@drawable/bg1"
		>
	<ImageView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:src="@drawable/logo_denglu"
		android:layout_gravity="center_horizontal"
		android:paddingTop="22dp"
		/>
	</LinearLayout>
	<LinearLayout
		android:id="@+id/ll"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:background="@drawable/login_bg3"
		android:orientation="vertical"
		>
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="合意宝登录"
		android:textColor="#2d506e"
		android:paddingTop="10dp"
		android:paddingLeft="10dp"
		/>
	<TextView 
		android:id="@+id/l_username" 
		android:textColor="#444444"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:layout_marginTop="15dp"
		android:paddingBottom="5dp"
		android:text="用户名:" 
		android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp"/>
	<EditText
		android:id="@+id/username"
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:layout_below="@id/l_username" 
		android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp"
		android:singleLine="true"
		style="@style/my_edittext_style"
		android:paddingLeft="4dp"
		/>
	<TextView 
		android:id="@+id/l_password" 
		android:textColor="#444444"
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:text="密码:" 
		android:layout_below="@id/username"
		android:layout_marginTop="10dp"
		android:paddingLeft="10dp"
		android:paddingBottom="5dp"
		android:paddingRight="10dp"/>
	<EditText
		android:id="@+id/password"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/l_password"
		android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp"
		style="@style/my_edittext_style"
		android:paddingLeft="4dp"
		/>
     <LinearLayout
     	android:layout_marginTop="10dp"
     	android:orientation="horizontal"
     	android:layout_width="fill_parent"
     	android:layout_height="wrap_content"
     	>
     	<CheckBox
     		android:layout_width="wrap_content"
     		android:layout_height="wrap_content"
     		android:text="自动登录"
     		android:button="@drawable/mycheckbox" 
     		android:textColor="#000000"
     		android:layout_marginLeft="10dp"
     		android:drawablePadding="5dp"
     		/>
     	<CheckBox
     		android:layout_width="wrap_content"
     		android:layout_height="wrap_content"
     		android:text="离线模式"
     		android:button="@drawable/mycheckbox"
     		android:textColor="#000000"
     		android:layout_marginLeft="90dp"
     		android:clickable="true"
     		android:drawablePadding="5dp"
     		/>
     	</LinearLayout>
     <RelativeLayout 
     	android:orientation="horizontal"
     	android:layout_width="fill_parent"
     	android:layout_height="wrap_content"
     	android:layout_gravity="bottom"
     	>
     	<com.notice.helogin.ImageBt
     		android:id="@+id/bt_confirm"
     		android:layout_height="wrap_content"
     		android:layout_width="wrap_content"
     		android:layout_alignParentBottom="true"
     		android:background="@drawable/btbg"
     		android:clickable="true"
     		android:focusable="true"
     		/>
     	<com.notice.helogin.ImageBt 
     		android:id="@+id/bt_cancel"
     		android:layout_toRightOf="@id/bt_confirm"
     		android:layout_height="wrap_content"
     		android:layout_width="wrap_content"
     		android:layout_alignParentBottom="true"
     		android:background="@drawable/btbg"
     		android:clickable="true"
     		android:focusable="true"
			/>
     	</RelativeLayout>
     </LinearLayout>
</LinearLayout>